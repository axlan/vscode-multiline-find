{
    "name": "multiline-find-and-replace",
    "displayName": "Multiline Find and Replace",
    "description": "Multiline Find and Replace",
    "repository": {
        "type": "git",
        "url": "https://github.com/axlan/vscode-multiline-find.git"
    },
    "license": "LICENSE.md",
    "icon": "icon.png",
    "version": "0.0.1",
    "publisher": "axlan",
    "engines": {
        "vscode": "^1.19.0"
    },
    "keywords": [
        "vscode",
        "find",
        "search",
        "replace",
        "multiline"
      ],
      "categories": [
        "Other"
      ],
      "activationEvents": [
        "*"
      ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "multilinefind.copyAsRegex",
                "title": "Copy Selection as Regex",
                "icon": {
                    "light": "./media/multi-line-icon.svg",
                    "dark": "./media/multi-line-icon-dark.svg"
                }
            },
            {
                "command": "multilinefind.multiLineFind",
                "title": "Open Find Widget with Selection as Regex",
                "icon": {
                    "light": "./media/multi-line-icon.svg",
                    "dark": "./media/multi-line-icon-dark.svg"
                }
            }
        ],
        "menus": {
            "editor/context": [
                {
                "when": "editorHasSelection && editorTextFocus",
                "command": "multilinefind.multiLineFind"
                },
                {
                "when": "editorHasSelection && editorTextFocus",
                "command": "multilinefind.copyAsRegex"
                }
            ]
        },
        "keybindings": [
            {
                "key": "ctrl+alt+f",
                "mac": "cmd+alt+f",
                "command": "multilinefind.multiLineFind",
                "when": "editorTextFocus"
            },
            {
                "key": "ctrl+alt+c",
                "mac": "cmd+alt+c",
                "command": "multilinefind.copyAsRegex",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "escape-string-regexp": "^1.0.5"
    }
}
